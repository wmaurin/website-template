---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="subsection">
  <h3>{title}</h3>
  <slot />
</div>

<style>
  .subsection {
    margin-top: 1.5rem;
  }

  .subsection:first-child {
    margin-top: 0;
  }

  h3 {
    margin-bottom: 0.75rem;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>
