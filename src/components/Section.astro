---
interface Props {
  title: string;
  description?: string;
  centered?: boolean;
}

const { title, description, centered = false } = Astro.props;
---

<section class:list={["section", { centered }]}>
  <div class="section-header">
    <h2>{title}</h2>
    {description && <p>{description}</p>}
  </div>
  <slot />
</section>

<style>
  .section {
    padding: 3rem 1rem;
  }

  .section-header {
    margin-bottom: 1rem;
  }

  .section.centered {
    text-align: center;
  }

  p {
    color: var(--color-text-muted, #666);
  }
</style>
